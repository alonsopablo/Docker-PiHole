# Create a new volume to store the portainer data
docker volume create portainer_data

# Install portainer container, we are not using Compose this time
docker run -d -p 8000:8000 -p 9443:9443 -p 9000:9000 --name portainer \
    --restart=always \
    -v /var/run/docker.sock:/var/run/docker.sock \
    -v portainer_data:/data \
    portainer/portainer-ce:2.11.0

# Access portainer GUI on port 9000
